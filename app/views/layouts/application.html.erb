<!DOCTYPE html>
<html>

<header>
    <title>NBAallstar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</header>

<body>
    <header>
        <div class="year">2020 All-star</div>
        <div class="ver">|</div>
        <ul class="headerline">
            <% if user_signed_in? %>
            <li class="list">Home</li>
            <li class="list">Player</li>
            <li class="list">Vote</li>
            <li class="list">Log in</li>
            <% else %>
            <li class="list"><%= link_to "Home", root_path, class:"li" %></li>
            <li class="list"><%= link_to "Chicago Week",class:"li" %></li>
            <li class="list"><%= link_to "Sign up", class:"li" %></li>
            <li class="list"><%= link_to "Sign in", class:"li"%></li>
            <% end %>
        </ul>
    </header>
    <%= image_tag 'nbaa.jpg', class:"symbol" %>
    <%= yield %>
</body>

</html>